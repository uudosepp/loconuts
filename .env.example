# WordPress Database Configuration
# Copy this file to .env and fill in with your actual values

# Database Connection
DB_NAME=wordpress
DB_USER=wordpress_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=3306

# WordPress Environment
WORDPRESS_ENV=production

# Debugging (set to false in production)
WP_DEBUG=false
WP_DEBUG_LOG=false
WP_DEBUG_DISPLAY=false

# Optional: REST API settings
# WP_REST_ENABLED=true (enabled by default in start.sh)

# Optional: Frontend API URL (for Vercel)
# API_URL=https://your-app.onrender.com